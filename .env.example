# Atari RL Server Environment Configuration
# Copy this file to .env and update the values for your environment

# Server Configuration
RL_SERVER_HOST=0.0.0.0
RL_SERVER_PORT=5001
FLASK_DEBUG=false
FLASK_TESTING=false
MAX_CONTENT_LENGTH=16777216

# Security Configuration
FLASK_SECRET_KEY=your-super-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_EXPIRES=3600
BCRYPT_ROUNDS=12

# CORS Configuration (comma-separated list)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate Limiting
RATE_LIMIT_DEFAULT=200 per day, 50 per hour

# Database Configuration
DATABASE_URL=sqlite:///data/rl_training.db
DB_ECHO=false
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Caching Configuration
CACHE_TYPE=simple
REDIS_URL=redis://localhost:6379/0
CACHE_DEFAULT_TIMEOUT=300

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_PATH=logs/rl_server.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# RL Training Configuration
RL_DEFAULT_EPISODES=1000
RL_MAX_EPISODES=10000
RL_FRAME_RATE=30
RL_IMAGE_QUALITY=85
RL_REPLAY_BUFFER_SIZE=100000
RL_BATCH_SIZE=64
RL_LEARNING_RATE=0.001
RL_GAMMA=0.99
RL_EPSILON_START=1.0
RL_EPSILON_END=0.01
RL_EPSILON_DECAY=0.995

# Hardware Optimization
CUDA_VISIBLE_DEVICES=0
OMP_NUM_THREADS=4

# Development/Testing
PYTEST_CURRENT_TEST=
TESTING_DATABASE_URL=sqlite:///:memory:

# Remote Management (Hetzner VPS)
REMOTE_HOST=185.216.21.239
REMOTE_USER=riccardo
SSH_KEY_PATH=~/.ssh/id_ed25519
